// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Hotel {
  id              Int                   @id @default(autoincrement())
  name            String
  city            String
  services        HotelService[]
  serviceBookings HotelServiceBooking[]
  guests          HotelGuest[]
}

model HotelService {
  id           Int     @id @default(autoincrement())
  hotelId      Int
  name         String
  descriptions String?
  imageLinks   String?
  freeService  Boolean
  hotel        Hotel   @relation(fields: [hotelId], references: [id])

  @@index([hotelId])
}

model HotelServiceBooking {
  id          Int        @id @default(autoincrement())
  hotelId     Int
  serviceName String
  guestId     Int
  hotel       Hotel      @relation(fields: [hotelId], references: [id])
  guest       HotelGuest @relation(fields: [guestId], references: [id])

  @@index([hotelId])
  @@index([guestId])
}

model HotelGuest {
  id              Int                   @id @default(autoincrement())
  hotelId         Int
  roomNumber      Int
  checkinDate     DateTime
  checkoutDate    DateTime
  email           String
  fullname        String
  loginToken      String? // Token used for passwordless login
  tokenExpiresAt  DateTime? // Expiry time for login token
  serviceBookings HotelServiceBooking[]
  hotel           Hotel                 @relation(fields: [hotelId], references: [id])
  plan            Plan                  @relation(fields: [planId], references: [id])
  planId          Int

  @@unique([roomNumber, checkinDate])
  @@index([hotelId])
}

model Attraction {
  id             Int    @id @default(autoincrement())
  title          String
  address        String
  description    String
  link_url       String
  latitude       Float
  longitude      Float
  indoor_outdoor String
  imageLink      String
  tags           Tag[]
}

model Tag {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  Attraction Attraction[]
}

model Plan {
  id   Int    @id @default(autoincrement())
  plan String

  HotelGuest HotelGuest[]
}
